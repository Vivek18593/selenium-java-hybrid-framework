<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OrangeHRM Sanity Suite">
    <listeners>
        <listener class-name="org.vivek.utilities.ExtentReportManager"/>
    </listeners>

    <test name="Sanity - Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <!--            Dashboard Page-->
            <class name="org.vivek.testcases.DashboardPageTest">
                <methods>
                    <include name="verifyUserLoginSuccessful"/>
                    <include name="verifyMyTimesheetIsAccessible"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>




